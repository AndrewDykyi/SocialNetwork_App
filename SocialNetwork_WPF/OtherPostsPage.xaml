<Window x:Class="SocialNetwork_WPF.OtherPostsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Інші пости" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Пости інших користувачів" FontSize="24" Margin="10" />
            <ListBox x:Name="OtherPostsListBox" Margin="10" SelectionChanged="OtherPostsListBox_SelectionChanged" />

            <TextBlock Text="Коментар" Margin="10" />
            <TextBox x:Name="CommentTextBox" Margin="10" Height="50" />
            <Button Content="Додати коментар" Click="AddCommentButton_Click" Margin="10" IsEnabled="False" />

            <Button Content="Лайкнути" Click="LikeButton_Click" Margin="10" IsEnabled="False" />
        </StackPanel>
    </Grid>
</Window>
